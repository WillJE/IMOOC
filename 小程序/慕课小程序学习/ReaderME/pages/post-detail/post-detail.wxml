<view class="container">
  <image class="head-image" src="{{isPlayingMusic?music.coverImg:headImgSrc}}"></image>
  <image class="audio" catchtap="onMusicTap" src="/images/music/{{isPlayingMusic?'music-stop.png':'music-start.png'}}"></image>
  <view class="author-date">
    <image class="avatar" src="{{headImgSrc}}"></image>
    <text class="author">{{author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{dateTime}}</text>
  </view>
  <text class="title">{{title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image catchtap="onColletionTap" src="/images/icon/{{collected?'collection.png':'collection-anti.png'}}"></image>
      <image catchtap="onShareTap" class="share-img" src="/images/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{detail}}</text>
</view>